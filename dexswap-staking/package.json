{
    "name": "dexswap-staking-distribution",
    "version": "0.1.6",
    "description": "DexSwap-specific contracts suite to bootstrap staking-based reward campaigns (for liquidity mining).",
    "files": [
        "/*.sol",
        "interfaces/*.sol",
        "/build/*.json"
    ],
    "scripts": {
        "lint:eslint": "eslint \"test/**/*.js\"",
        "lint:prettier": "prettier -l contracts/**/*.sol && prettier -l test/**/*.js",
        "lint:commit-message": "commitlint -e",
        "lint": "yarn lint:eslint && yarn lint:prettier",
        "test": "hardhat test",
        "test:coverage": "hardhat coverage",
        "test:gasreport": "cross-env GAS_REPORT_ENABLED=true hardhat test",
        "compile": "rimraf ./build && rimraf ./artifacts && hardhat compile && mkdirp build && copyfiles -f -E ./artifacts/contracts/*.sol/*.json ./build && rimraf ./build/*.dbg.json",
        "prepack": "yarn compile && copyfiles -f -E ./contracts/*.sol ./ && copyfiles -f -E ./contracts/interfaces/*.sol ./interfaces",
        "postpack": "rimraf ./*.sol",
        "deploy:rinkeby:validators": "hardhat deploy --network rinkeby --verify --with-validators --token-registry-address --token-registry-list-id 1 --factory-address",
        "deploy:rinkeby:no-validators": "hardhat deploy --network rinkeby --verify --owner-address  --factory-address",
        "deploy:matic:no-validators": "hardhat deploy --network matic --owner-address  --factory-address",
        "deploy:moonbeam:no-validators": "hardhat deploy --network mumbai --verify",
        "deploy:xdai:no-validators": "hardhat deploy --network xdai --owner-address"
    },
    "author": "Agin DropDisco || gin.dropdisco@gmail.com",
    "license": "GPL-3.0",
    "dependencies": {
        "@openzeppelin/contracts": "^4.0.0",
        "dexswap-core": "git://github.com/Agin-DropDisco/module-dexswap-core.git",
        "dexswap-token-registry": "git://github.com/Agin-DropDisco/dexswap-registry.git",
        "erc20-staking-rewards": "git://github.com/Agin-DropDisco/ERC20-Staking-Rewards.git",
        "flattener": "^0.4.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@nomiclabs/hardhat-etherscan": "^2.1.1",
        "@nomiclabs/hardhat-truffle5": "^2.0.0",
        "@nomiclabs/hardhat-web3": "^2.0.0",
        "babel-eslint": "^10.1.0",
        "bn.js": "^5.1.3",
        "chai": "^4.2.0",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "dotenv": "^8.2.0",
        "eslint": "^7.17.0",
        "hardhat": "^2.0.7",
        "hardhat-gas-reporter": "^1.0.4",
        "husky": "^4.3.7",
        "mkdirp": "^1.0.4",
        "prettier": "^2.1.2",
        "prettier-plugin-solidity": "^1.0.0-beta.3",
        "rimraf": "^3.0.2",
        "solhint-plugin-prettier": "^0.0.5",
        "solidity-coverage": "^0.7.13",
        "web3": "^1.3.1"
    }
}
